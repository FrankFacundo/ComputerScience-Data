{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${fileDirname}/${fileBasename}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${fileDirname}"
    },
    {
      "name": "Debug pytest (current folder)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q",
        "-k",
        "test_param" // run only tests matching this expression
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${fileDirname}"
    },
    {
      "name": "Python: TFT",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}/Data/DataScience/Models/TimeSeries/TFT/by_hand/"
    },
    {
      "name": "Debug with Makefile",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}", // Adjust to match the target output name
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
